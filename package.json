{
  "name": "car-audio",
  "version": "1.0.0",
  "description": "Electron app to install on raspberry pi to turn it into an audio player",
  "private": true,
  "main": "dist/main.js",
  "build": {
    "appId": "my.audio.app",
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ]
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "webpack --config webpack.config.js --mode production --define process.env.NODE_ENV='\"production\"'",
    "watch": "webpack --config webpack.config.js --mode development --watch --define process.env.NODE_ENV='\"development\"'",
    "start": "webpack --config webpack.config.js --mode production --define process.env.NODE_ENV='\"production\"' && electron ./dist/main.js",
    "release-mac": "webpack --config webpack.config.js --define process.env.NODE_ENV='\"production\"' --mode production && electron-packager . --overwrite --platform=darwin --arch=x64 --prune=true --icon=icons/icon.png --out=release-builds",
    "release-rpi": "webpack --config webpack.config.js --define process.env.NODE_ENV='\"production\"' --mode production && electron-packager . car-audio --overwrite --asar --platform=linux --arch=armv7l --icon=icons/icon.png --prune=true --out=release-builds",
    "release-linux": "webpack --config webpack.config.js --define process.env.NODE_ENV='\"production\"' --mode production && electron-packager . car-audio --overwrite --asar --platform=linux --arch=x64 --icon=icons/icon.png --prune=true --out=release-builds",
    "create-debian-installer": "electron-installer-debian --src release-builds/car-audio-linux-x64/ --arch amd64 --config debian.json",
    "create-debian-installer-rpi": "electron-installer-debian --src release-builds/car-audio-linux-armv7l/ --arch armhf --config debian.json"
  },
  "author": "Ben Wright",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.3.4",
    "@babel/preset-env": "^7.3.4",
    "@babel/preset-react": "^7.0.0",
    "babel-loader": "^8.0.5",
    "css-loader": "^2.1.1",
    "electron": "^3.0.13",
    "electron-builder": "^20.39.0",
    "electron-installer-debian": "^1.1.1",
    "html-webpack-plugin": "^3.2.0",
    "mini-css-extract-plugin": "^0.5.0",
    "node-sass": "^4.11.0",
    "nodemon-webpack-plugin": "^4.0.8",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "webpack": "^4.29.6",
    "webpack-cli": "^3.2.3",
    "webpack-node-externals": "^1.7.2"
  },
  "dependencies": {
    "app-root-path": "^2.1.0",
    "electron-packager": "^13.1.1",
    "node-sass-utils": "^1.1.2",
    "react": "^16.8.4",
    "react-dom": "^16.8.4",
    "react-player-controls": "^1.1.0",
    "system-control": "0.0.5"
  }
}
